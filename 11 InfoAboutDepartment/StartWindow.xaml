<Window x:Class="_11_InfoAboutDepartment.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_11_InfoAboutDepartment"
        mc:Ignorable="d"
        Title="StartWindow" 
        Height="150" MaxHeight="150" MinHeight="150"
        Width="400" MaxWidth="400" MinWidth="400">
    <Grid Background="#FFB1DFDF" >
        <TextBlock HorizontalAlignment="Center" 
                   TextWrapping="Wrap" 
                   Text="Запустить тестовый режим?" 
                   VerticalAlignment="Center" 
                   Margin="100,10,100,60" 
                   Width="170"/>
        <Button x:Name="Yes_Button"
                Content="Да" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="75" 
                Margin="10,56,0,0" Click="Yes_Button_Click"/>
        <Button x:Name="No_Button"
                Content="Нет" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Width="75" 
                Margin="0,56,10,0" Click="No_Button_Click"/>
    </Grid>
</Window>
